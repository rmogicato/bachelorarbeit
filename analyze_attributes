import pandas as pd

df_std_automatic = pd.read_csv("std.csv", header=0, index_col=0)
df_std = pd.read_csv("mean.csv", header=0, index_col=0)
attribute_std = {}
attribute_std_automatic = {}
difference = {}

for column in df_std_automatic:
    mean1 = df_std_automatic[column].mean(axis=0)
    attribute_std_automatic[column] = mean1

    mean2 = df_std[column].mean(axis=0)
    attribute_std[column] = mean2

    difference[column] = abs(mean1 - mean2)


sorted_attribute_std = {k: v for k, v in sorted(attribute_std.items(), key=lambda item: item[1])}
sorted_attribute_std_automatic = {k: v for k, v in sorted(attribute_std_automatic.items(), key=lambda item: item[1])}
# sorted_difference = {k: v for k, v in sorted(difference.items(), key=lambda item: item[1])}
print(sorted_attribute_std)
print(sorted_attribute_std_automatic)
# print(sorted_difference)
